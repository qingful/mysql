[mysqld]

# query log
slow_query_log = on
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2
log_queries_not_using_indexes

# bin log
server-id = 1
log_bin = /var/log/mysql/mysql-bin.log
log_error = /var/log/mysql/mysql-bin.err

# connections
max_connections = 1000

# cache
query_cache_type = on
query_cache_size = 32M